<script id="storefront.call-for-prices-dialog.tpl" type="text/ng-template">
    <div class="ajaxify-modal is-visible" id="ajaxifyModal" style="opacity: 1;">
        <button class="ajaxifyCart--close" title="{{ 'products.compare_list.close_dialog' | t }}" ng-click="close()">{{ 'products.compare_list.close_dialog' | t }}</button>
        <div class="ajaxifyCart--content" id="ajaxifyCart">
            <h1 class="h2">{{ 'products.call_for_pricing' | t }}</h1>
            <div class="cart-row">
                <div class="grid">
                    <div class="grid-item">
                        <p>{{ 'products.call_for_pricing_message' | t }}</p>
                    </div>
                </div>
            </div>
            <div class="cart-row">
                <div class="grid">
                    <div class="grid-item text-right">
                        <button class="btn btn-primary" ng-click="close()">{{ 'products.call_for_pricing_ok' | t }}</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="ajaxifyCart-overlay"></div>
</script>